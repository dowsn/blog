<div class="admin-title">
  <h1>Add Edit Post</h1>

  .
  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="delete" />
  </form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
  <label for="title"><b>Title</b></label>
  <input
    type="text"
    placeholder="Post Title"
    name="title"
    value="<%= data.title %>"
  />

  <label for="body"><b>Content</b></label>
  <textarea cols="50" rows="10" name="body"><%= data.body %></textarea>
  <input type="submit" value="Put" class="btn" />
</form>
