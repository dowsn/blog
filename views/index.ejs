<div class="author">
  <h1 class="author__heading">Hi, I'm Dowsn</h1>
  <p class="author__body">
    Web developer
  </p>
</div>
<img src="/img/hero-image.webp" alt="A picture of Dowsn" class="hero-image" width="981" height="528">
<section class="articles">
  <h2 class="articles__heading">
    Latest Posts
  </h2>
  <ul class="articles-ul">

    <% data.forEach(p => { %>
    <li>
      <a href="/post/<%= p._id %>">
        <span><%= p.title %></span>
        <span class="article-list__date"><%= p.createdAt.toDateString() %></span>
      </a>
    </li>
    <% }) %>


  </ul>

  <% if (nextPage !== null) { %>
    <a href="<%= '/?page=' + nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>